<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnbolso"
        android:layout_width="200dp"
        android:layout_height="99dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"
        android:text="DE BOLSO"
        app:layout_constraintBottom_toTopOf="@+id/btntemperatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntemperatura"
        android:layout_width="200dp"
        android:layout_height="99dp"
        android:layout_marginTop="24dp"
        android:text="CONVERSÃO DE TEMPERATURA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnbolso" />

    <Button
        android:id="@+id/btndescontos"
        android:layout_width="200dp"
        android:layout_height="99dp"
        android:layout_marginTop="19dp"
        android:text="DE DESCONTOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntemperatura" />

    <Button
        android:id="@+id/btneditar"
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="✏"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoView"
        android:layout_width="152dp"
        android:layout_height="60dp"

        android:layout_marginTop="1dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="__________"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnbolso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btneditar" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />
</androidx.constraintlayout.widget.ConstraintLayout>